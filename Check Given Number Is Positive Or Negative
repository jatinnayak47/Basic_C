#include<stdio.h>

void check(int num)
{
    if(num<0)
       printf("\n%d is negative number",num);
    else if(num>0)
      printf("\n%d is positive number",num);
    else if (num == 0)
        printf("\nZero");
}

int main(){
    int num,n;
    printf("\nEnter number to check :-");
    scanf("%d",&num);
    check(num);

    return 0;
}
